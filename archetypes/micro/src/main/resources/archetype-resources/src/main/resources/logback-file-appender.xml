#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<included>
    <property name="LOG_HOME" value="${symbol_dollar}{LOG_PATH:-./logs}"/>
    <property name="LOG_FILE" value="seezoon"/>
    <property name="LOG_PATTERN"
            value="${symbol_dollar}{FILE_LOG_PATTERN:-%d{${symbol_dollar}{LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} ${symbol_dollar}{LOG_LEVEL_PATTERN:-%5p} ${symbol_dollar}{PID:- } --- [%t] %-40.40logger{39} : %m%n${symbol_dollar}{LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 指定日志文件的名称 -->
        <file>${symbol_dollar}{LOG_HOME}/${symbol_dollar}{LOG_FILE}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${symbol_dollar}{LOG_HOME}/${symbol_dollar}{LOG_FILE}.log.%d{yyyy-MM-dd}-%i</fileNamePattern>
            <maxHistory>10</maxHistory>
            <maxFileSize>2048MB</maxFileSize>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>${symbol_dollar}{LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="AsyncFile" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>10000</queueSize>
        <appender-ref ref="FILE"/>
    </appender>
</included>